<div class="navbar-minimalist">
  <h1><%= @cocktail.name %></h1>
  <%= link_to "Back", cocktails_path %>
  <%= link_to "Add ingredients", new_cocktail_dose_path(@cocktail) %>
</div>

<h3>Ingredients</h3>
  <ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> - <%= dose.ingredient.name %></li>
    <p><%= link_to "Delete ingredient", cocktail_dose_path(@cocktail, dose), method: :delete %></p>
  <% end %>
</ul>
