<div class="container">
  <div>
    <h1><%= @cocktail.name %></h1>
    <span><%= link_to "Add ingredient", new_cocktail_dose_path(@cocktail) %> <i class="fas fa-blender"></i></span>
    <span><%= link_to "Back", cocktails_path %> <i class="fas fa-undo-alt"></i></span>
  </div>

  <br>

  <div>
    <h3>Ingredients</h3>
    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description %> - <%= dose.ingredient.name %> <%= link_to "(Delete ingredient)", dose_path(dose), method: :delete %></li>
      <% end %>
    </ul>
  </div>
</div>
